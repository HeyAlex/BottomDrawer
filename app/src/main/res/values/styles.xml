<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="bottomSheetStyle">@style/Widget.MaterialComponents.BottomSheet.Modal</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.BottomDrawer.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.BottomDrawer.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.BottomDrawer" parent="ShapeAppearanceOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
        <item name="cornerSizeTopLeft">@dimen/minimized_sheet_radius</item>
        <item name="cornerSizeTopRight">@dimen/minimized_sheet_radius</item>
    </style>

    <dimen name="minimized_sheet_radius">20dp</dimen>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Plain" parent="BottomDialogTheme">
        <item name="bottom_sheet_extra_padding">0dp</item>
        <item name="should_draw_under_status_bar">false</item>
    </style>

    <style name="Pull" parent="BottomDialogTheme">
        <item name="bottom_sheet_extra_padding">0dp</item>
        <item name="bottom_sheet_corner_radius">26dp</item>
        <item name="should_draw_content_under_handle_view">true</item>
    </style>

    <style name="Rotate" parent="BottomDialogTheme">
        <item name="bottom_sheet_extra_padding">0dp</item>
        <item name="bottom_sheet_corner_radius">26dp</item>
        <item name="should_draw_content_under_handle_view">true</item>
    </style>

</resources>
